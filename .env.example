# Emby UI Plugin Environment Configuration
# 复制此文件为 .env 并根据需要修改配置

# ===========================================
# 基本配置
# ===========================================

# 插件是否启用
EMBY_UI_PLUGIN_ENABLED=true

# 默认主题 (dark-modern, light-elegant, custom)
EMBY_UI_PLUGIN_THEME=dark-modern

# 是否自动应用主题
EMBY_UI_PLUGIN_AUTO_APPLY=true

# 调试模式
EMBY_UI_PLUGIN_DEBUG=false

# ===========================================
# 用户权限配置
# ===========================================

# 允许用户自定义主题
EMBY_UI_PLUGIN_ALLOW_CUSTOMIZATION=true

# 允许用户切换主题
EMBY_UI_PLUGIN_ALLOW_THEME_SWITCHING=true

# 允许用户自定义颜色
EMBY_UI_PLUGIN_ALLOW_COLOR_CUSTOMIZATION=true

# ===========================================
# 性能配置
# ===========================================

# 插件注入延迟（毫秒）
EMBY_UI_PLUGIN_INJECT_DELAY=100

# DOM观察器节流间隔（毫秒）
EMBY_UI_PLUGIN_OBSERVER_THROTTLE=50

# 启用缓存
EMBY_UI_PLUGIN_ENABLE_CACHE=true

# 预加载主题
EMBY_UI_PLUGIN_PRELOAD_THEMES=false

# ===========================================
# Docker 配置
# ===========================================

# 用户ID（与宿主机用户匹配）
PUID=1000

# 组ID（与宿主机组匹配）
PGID=1000

# 时区
TZ=Asia/Shanghai

# Emby Web端口
EMBY_WEB_PORT=8096

# Emby HTTPS端口（可选）
EMBY_HTTPS_PORT=8920

# ===========================================
# 存储路径配置
# ===========================================

# Emby配置目录（宿主机路径）
EMBY_CONFIG_PATH=./config

# 媒体库路径（宿主机路径）
EMBY_MEDIA_PATH=./media

# 插件配置路径（宿主机路径）
PLUGIN_CONFIG_PATH=./plugin-config

# ===========================================
# 高级配置
# ===========================================

# CSS变量前缀
EMBY_UI_PLUGIN_CSS_PREFIX=--emby-

# API端点路径
EMBY_UI_PLUGIN_API_ENDPOINT=/plugins/emby-ui-plugin/api

# 强制重新注入
EMBY_UI_PLUGIN_FORCE_REINJECT=false

# 自定义CSS（可选）
# EMBY_UI_PLUGIN_CUSTOM_CSS=".emby-card { box-shadow: 0 4px 8px rgba(0,0,0,0.3); }"

# ===========================================
# 主题颜色配置（可选）
# ===========================================

# 主色调
# EMBY_UI_PLUGIN_PRIMARY_COLOR=#667eea

# 次要色调
# EMBY_UI_PLUGIN_SECONDARY_COLOR=#718096

# 强调色
# EMBY_UI_PLUGIN_ACCENT_COLOR=#f093fb

# 背景透明度 (0-100)
# EMBY_UI_PLUGIN_BACKGROUND_OPACITY=90

# ===========================================
# 硬件加速配置（可选）
# ===========================================

# 启用硬件转码（需要支持的硬件）
# ENABLE_HARDWARE_TRANSCODING=false

# GPU设备路径（NVIDIA）
# GPU_DEVICE=/dev/dri

# ===========================================
# 网络配置（可选）
# ===========================================

# 自定义网络名称
# DOCKER_NETWORK=emby-network

# 启用IPv6
# ENABLE_IPV6=false

# ===========================================
# 日志配置
# ===========================================

# 日志级别 (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# 日志文件最大大小（MB）
LOG_MAX_SIZE=10

# 保留日志文件数量
LOG_MAX_FILES=5

# ===========================================
# 备份配置
# ===========================================

# 自动备份间隔（小时）
AUTO_BACKUP_INTERVAL=24

# 保留备份数量
BACKUP_RETENTION=10

# 备份压缩
BACKUP_COMPRESSION=true